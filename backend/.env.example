# Backend Environment Variables (.env)
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED FOR CROSS-DOMAIN COOKIE AUTH
# ============================================

# Frontend URL (CRITICAL - use exact URL)
# Production: Your Vercel deployment URL
# Development: http://localhost:5173
FRONTEND_URL=https://your-app.vercel.app

# Environment
# Production: production (enables secure cookies)
# Development: development
NODE_ENV=production

# ============================================
# AUTHENTICATION
# ============================================

# JWT Secret (use long random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_change_this_in_production

# ============================================
# DATABASE
# ============================================

# MongoDB Connection String
# Development: mongodb://localhost:27017/videocall
# Production: MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/videocall

# ============================================
# SERVER
# ============================================

# Port (Render uses PORT env variable automatically)
PORT=5000

# ============================================
# EXAMPLE PRODUCTION VALUES
# ============================================

# FRONTEND_URL=https://my-video-app.vercel.app
# NODE_ENV=production
# JWT_SECRET=a1b2c3d4e5f6...  (64+ character random string)
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/videocall
# PORT=5000
